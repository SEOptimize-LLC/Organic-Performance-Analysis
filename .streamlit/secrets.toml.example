# Organic Performance Analysis - Secrets Configuration
# Copy this file to secrets.toml and fill in your API credentials

# For Streamlit Cloud deployment:
# Go to App Settings > Secrets and paste this configuration with your actual values

# Google Search Console API Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com
# 1. Create a project
# 2. Enable the Search Console API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add your app URL to authorized redirect URIs

[google]
client_id = "your-google-client-id.apps.googleusercontent.com"
client_secret = "your-google-client-secret"
redirect_uri = "http://localhost:8501"  # Use your Streamlit Cloud URL in production

# DataForSEO API Credentials
# Sign up at https://dataforseo.com and get your credentials from the dashboard

[dataforseo]
login = "your-dataforseo-email@example.com"
password = "your-dataforseo-api-password"

# OpenRouter API Key
# Get your API key from https://openrouter.ai/keys

[openrouter]
api_key = "sk-or-v1-your-openrouter-api-key"
